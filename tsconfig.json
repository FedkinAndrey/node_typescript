{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "declarationDir": "dist",
    "moduleResolution": "node",
    "pretty": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
}